package at.fhoe.mc.linzbrowser.android.activity;

import java.io.File;

import android.app.ListActivity;
import android.app.ProgressDialog;
import android.content.Intent;
import android.os.Bundle;
import android.os.Handler;
import android.os.Message;
import android.view.View;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.Toast;
import at.fhooe.mc.linzbrowser.android.GeodataUpdater;
import at.fhooe.mc.linzbrowser.android.R;
import at.fhooe.mc.linzbrowser.android.RawDataProvider;

public class POICategories extends ListActivity {
	
    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.poi_cats);
        
    }
    
    
    @Override
    protected void onResume() {
    	loadData();
    	super.onResume();
    }
    
    @Override
    protected void onPause() {
    	super.onPause();
    }
    
    public void loadData(){
    	
    	ArrayAdapter<String> poiAdapter = new ArrayAdapter<String>(
    			getApplicationContext(), 
    			android.R.layout.simple_list_item_1, 
    			android.R.id.text1, 
    			RawDataProvider.catsNames);
    	
    	getListView().setAdapter(poiAdapter);
    }
    
    public void checkForUpdate(final View view){
    	
    	GeodataUpdater updater = new GeodataUpdater(getApplicationContext());
    	if(updater.isUpdateAvailable()){
    		updater.updateData();
    		loadData();
    	}else{
    		Toast.makeText(getApplicationContext(), "Everything is Up2Date!", Toast.LENGTH_SHORT).show();
    	}
    	
    	
    	
    	
    }
    
    private void checkUpdateProgress(){
		final ProgressDialog dialog = ProgressDialog.show(this, "",
				"Check for updates ...", true, false);

		final Handler handler = new Handler() {
			public void handleMessage(Message msg) {
				dialog.dismiss();
				
				if(!isEndGame){
					Intent i = new Intent(getApplicationContext(), GameScreen.class);
					startActivity(i);
				}else{
					updateData();
				}
				
				isEndGame = false;

			}
		};
		Thread startSaving = new Thread() {
			public void run() {

				dbUserInput.checkUpdateProgress();
				dbCurrGame.closeOnPause();

				File fdb = new File(getDatabasePath("curr_game.db") + "");
				File f = new File(getGamesPath() + "curr_game");

				fdb.delete();
				f.delete();

				File fpic = new File(getCGPicPath());
				fpic.mkdirs();

				dbCurrGame = new DBCurrGame(getApplicationContext());

				handler.sendEmptyMessage(0);
			}
		};
		startSaving.start();
	}
    
    @Override
    protected void onListItemClick(ListView l, View v, int position, long id) {
    	Intent i = new Intent(getApplicationContext(), POICategory.class);
    	i.putExtra("poiType", position);
    	startActivity(i);
    	super.onListItemClick(l, v, position, id);
    }
   
}